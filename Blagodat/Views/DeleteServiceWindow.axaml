<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Blagodat.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Blagodat.Views.DeleteServiceWindow"
        Title="Удалить услугу"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="Auto,*,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Background="#f0f0f0" Margin="10">
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Image Name="UserImage" Width="40" Height="40"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Name="UserNameText" FontWeight="Bold"/>
                    <TextBlock Name="UserRoleText"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Column="1" Name="TimerBlock" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button Grid.Column="2" Content="Назад" 
                    Click="OnBackClick"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20">
            <Grid RowDefinitions="Auto,Auto,Auto">
                <TextBlock Grid.Row="0" Text="Удаление услуги" 
                           HorizontalAlignment="Center" 
                           FontSize="24" 
                           Margin="0,0,0,20"/>
                
                <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Margin="0,10,0,20" VerticalAlignment="Center">
                    <TextBlock Grid.Column="0" Text="Услуга:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" Name="ServiceComboBox" Width="400" HorizontalAlignment="Left">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:Service">
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                
                <Button Grid.Row="2" 
                        Content="Удалить выбранную услугу" 
                        Background="DarkRed"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Padding="15,5"
                        Name="DeleteButton"
                        Click="OnDeleteSelectedClick"/>
            </Grid>
        </Grid>

        <TextBlock Grid.Row="2" Name="StatusBlock" 
                   HorizontalAlignment="Center" Margin="0,10"/>
    </Grid>
</Window>
